# Database Configuration (Production)
DATABASE_URL=postgres://username:password@your-db-host:5432/database_name

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=3000

# Logging Configuration
RUST_LOG=warn

# Redis Configuration (Production)
REDIS_URL=redis://your-redis-host:6379

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# CORS Configuration
CORS_ORIGIN=http://your-domain.com,http://localhost:3000
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# Security
JWT_SECRET=your-super-secure-jwt-key-change-this-in-production
JWT_EXPIRY=1800

# Production Settings
ENVIRONMENT=production
API_BASE_URL=http://your-domain.com:3000

# Deployment Configuration
BIND_ADDRESS=0.0.0.0:3000
MAX_CONNECTIONS=1000
WORKER_THREADS=4

# SSL/TLS (if terminating SSL at application level)
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/private.key

# Health Check
HEALTH_CHECK_PATH=/health

# Security Configuration
SECURE_HEADERS=true
CSP_ENABLED=true
HSTS_MAX_AGE=31536000

# Monitoring & Metrics
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# External APIs (for future integration)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
NIGERIA_POST_API_KEY=your-nigeria-post-api-key